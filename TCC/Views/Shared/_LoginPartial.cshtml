@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item dropdown">
                @*@Html.ActionLink("Olá " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link dropdown-toggle" })*@

                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Olá @User.Identity.GetUserName()</a>
                <div class="dropdown-menu">

                    @Html.ActionLink("Alterar senha", "ChangePassword", "Manage", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })

                    <div class="dropdown-divider"></div>

                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </div>
            </li>
            

        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/login" id="btnLogin"><i class="fa fa-user"></i> Login</a></li>
    </ul>
}
