@model IEnumerable<TCC.Models.ApplicationUser>

@{
    ViewBag.Title = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuários cadastrados</h2>
<hr />

<a href="/Account/Register" class="btn btn-primary">Criar novo</a>
<p>
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <a href="@Url.Action("Delete", "Usuarios", new { id = item.Id })"><i class="fa fa-trash"></i> Excluir</a>
                </td>
            </tr>
        

    }

</table>